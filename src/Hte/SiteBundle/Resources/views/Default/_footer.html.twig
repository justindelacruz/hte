        <address class="col-sm-3">
            <strong>{{ 'footer.section_3.title'|trans({}, domain)|raw }}</strong><br>
            {{ 'footer.section_3.address_1'|trans({}, domain)|raw }}<br>
            {{ 'footer.section_3.address_2'|trans({}, domain)|raw }}<br>
            {{ 'footer.section_3.address_3'|trans({}, domain)|raw }}<br>
