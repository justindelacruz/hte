        </address>
        <address class="col-sm-3">
            <strong>{{ 'footer.section_2.title'|trans({}, domain)|raw }}</strong><br>
            {{ 'footer.section_2.address_1'|trans({}, domain)|raw }}<br>
            {{ 'footer.section_2.address_2'|trans({}, domain)|raw }}<br>
            {{ 'footer.section_2.address_3'|trans({}, domain)|raw }}<br>
