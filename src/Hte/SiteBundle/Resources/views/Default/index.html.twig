            <a href="{{ path('hte_capabilities') }}" class="h-button">{{ 'homepage.section_3.button'|trans|raw }}</a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <h3>{{ 'homepage.section_4.title'|trans|raw }}</h3>
            <p>{{ 'homepage.section_4.body'|trans|raw }}</p>
            <a href="{{ path('hte_contact') }}" class="h-button">{{ 'homepage.section_4.button'|trans|raw }}</a>
        </div>
        <div class="col-sm-4"><img src="{{ asset('bundles/htesite/images/contact_us.jpg') }}" class="img-responsive"  /></div>
    </div>
</div>
{% endblock %}